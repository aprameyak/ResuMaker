# App Configuration
# Local development: use http://localhost:3000
# Production: Vercel sets this automatically, you don't need to configure it
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# Clerk Authentication (Get from Clerk Dashboard)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_xxxxxx
CLERK_SECRET_KEY=sk_test_xxxxxx

# Google AI Configuration (Get from Google Cloud Console)
GOOGLE_AI_API_KEY=AI_xxxxxx

# Redis Configuration (Get from your Redis provider)
REDIS_URL=redis://xxxxxx

# Rate Limiting Settings (Optional - these are default values)
NEXT_PUBLIC_MAX_REQUESTS_PER_MINUTE=10
NEXT_PUBLIC_MAX_CONTENT_LENGTH=5000

# Security
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://localhost:3000

# Analytics and Monitoring (Optional)
NEXT_PUBLIC_ANALYTICS_ID=your_analytics_id_here
SENTRY_DSN=your_sentry_dsn_here 